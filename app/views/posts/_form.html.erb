<%=render 'shared/errors', obj: @post %>


<div class="well col-md-8 col-md-offset-2">
    <%= form_for @post, :html => {:class => "form-horizontal"} do |m| %>
        <fieldset>
          <div class="control-group">
            <%= m.label :name  %>
            <div class="controls">
              <%= m.text_field :name, :size=>70 %>
            </div>
          </div>


          <div class="control-group">
            <%= m.label :summary %>
            <div class="controls">
              <%= m.text_field :summary, :size=>70%>
            </div>
          </div>


          <div class="control-group">
            <%= m.label :description %>
            <div class="controls">
              <%= m.text_area :description, :rows=>10%>
            </div>
          </div>
          <br/>


          <div class="form-actions">
          <%=m.submit(@post.new_record? ? 'Create Post' : 'Edit Post' , class: "btn btn-primary") %>
          </div>
        </fieldset>
    <% end %>
  
</div>

